@import './reset'
@import './_setting'
@import './logoFont'
@import './Dancing in the Rainbow'

html, body 
    font-family: $body-font
    line-height: 1.5
    width: 100%
    height: 100%
    font-smoothing: antialiased
    background-color: #fff

li
    list-style:none
a
	color: #000
	text-decoration: none
//清除浮动
.cf
    &:after
        display: block
        content: '.'
        height: 0
        line-height: 0
        clear: both
        visibility: hidden
//鼠标划过出现下划线
.hover-underline
    position: relative
    &:before 
        position: absolute
        top: auto
        bottom: -5px 
        left: 0
        width: 100%
        height: 2px 
        background-color: $green
        content: ''
        backface-visibility: hidden
        transition: all 0.2s
        transform: scaleX(0)
    &:hover::before, &:focus::before
        background-color: $green
        transform: scaleX(1)
@media screen and (max-width: 768px)
    .hover-underline
      &:before
        display: none
      &:hover
        border-bottom: 2px solid $green
//解决retina屏幕下border-1px的问题
@media (-webkit-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5)
	.border-1px
		&:after
			-webkit-transform: scaleY(0.7)
			transform: scaleY(0.7)
@media (-webkit-min-device-pixel-ratio: 2.0),(min-device-pixel-ratio: 2.0)
	.border-1px
		&:afeter
			-webkit-transform: scaleY(0.7)
			transform: scaleY(0.7)			