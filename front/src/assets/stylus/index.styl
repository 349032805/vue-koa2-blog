@import './reset'
@import './_setting'

html, body 
    font-family: $body-font
    width: 100%
    height: 100%
    font-smoothing: antialiased
    background-color: #fff

li
    list-style:none
a
	color: #000
	text-decoration: none

.cf
    &:after
        display: block
        content: '.'
        height: 0
        line-height: 0
        clear: both
        visibility: hidden

.hover-underline
    position: relative
    &:before 
        position: absolute
        top: auto
        bottom: -5px 
        left: 0
        width: 100%
        height: 3px 
        background-color: $green
        content: ''
        backface-visibility: hidden
        transition: all 0.2s
        transform: scaleX(0)
    &:hover::before, &:focus::before
        background-color: $green
        transform: scaleX(1)