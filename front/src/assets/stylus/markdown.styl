@import './_setting.styl';

@media all {
  .markdown {
    font-family: $body-font
    padding: 0;
    margin-right: auto;
    margin-left: auto;
    color: #24292e
  }
  .markdown p,
  .markdown h1,
  .markdown h2,
  .markdown h3,
  .markdown h4,
  .markdown h5,
  .markdown h6,
  .markdown blockquote,
  .markdown ul,
  .markdown ol,
  .markdown li,
  .markdown pre,
  .markdown code {
    padding: 0;
    margin: 0;
    font-size: 100%;
    border: none;
  }
  .markdown h1::before,
  .markdown h2::before,
  .markdown h3::before,
  .markdown h4::before,
  .markdown h5::before,
  .markdown h6::before,
  .markdown blockquote::before,
  .markdown li::before {
    white-space: nowrap;
  }
  .markdown p,
  .markdown h1,
  .markdown h2,
  .markdown h3,
  .markdown h4,
  .markdown h5,
  .markdown h6,
  .markdown blockquote,
  .markdown ul,
  .markdown ol,
  .markdown pre,
  .markdown hr,
  .markdown img,
  .markdown video {
    margin-top: 0.5em;
    margin-bottom: 0.3em;
  }
  .markdown li > ol,
  .markdown li > ul {
    margin-top: 0;
    margin-bottom: 0;
  }
  .markdown h1::before {
    content: "#\0000a0";
    color: $green;
  }
  .markdown h2::before {
    content: "##\0000a0";
    color: $green;
  }
  .markdown h3::before {
    content: "###\0000a0";
    color: $green;
  }
  .markdown h4::before {
    content: "####\0000a0";
    color: $green;
  }
  .markdown h5::before {
    content: "#####\0000a0";
    color: $green;
  }
  .markdown h6::before {
    content: "######\0000a0";
    color: $green;
  }
.markdown h1 {
  font-size: 1.7em;
}

.markdown h2 {
  font-size: 1.5em;
}

.markdown h3 {
  font-size: 1.3em;
}

.markdown h4 {
  font-size: 1.2em;
}

.markdown h5 {
  font-size: 1em;
}

.markdown h6 {
  font-size: 0.9em;
}
  .markdown blockquote {
    margin-right: 1.2em;
    padding-left: 1em
    border-left: 0.2em $green solid
  }
  .markdown ul,
  .markdown ol {
    list-style-type: none;
  }
  .markdown ul > li,
  .markdown ol > li {
    position: relative;
  }
  .markdown ul > li::before,
  .markdown ol > li::before {
    position: absolute;
    right: 100%;
  }
  .markdown ul.bulleted > li::before {
    content: "*\0000a0";
  }
  .markdown ul.dashed > li::before,
  .markdown ul > li::before {
    content: "\002013\0000a0";
  }
  .markdown ul > li {
    left: 1.2em;
    margin-right: 1.2em;
  }
  .markdown ol {
    counter-reset: markdown-ol-li;
  }
  .markdown ol > li::before {
    content: counter(markdown-ol-li) ".\0000a0";
    counter-increment: markdown-ol-li;
  }
  .markdown ol > li {
    left: 1.8em;
    margin-right: 1.8em;
  }
  .markdown ol > li:nth-child(n+10) {
    margin-left: 0.6em;
  }
  .markdown ol > li:nth-child(n+100) {
    margin-left: 1.2em;
  }
  .markdown ol > li:nth-child(n+1000) {
    margin-left: 1.8em;
  }
  .markdown pre {
    margin: 1em 0;
    padding: 1em;
    line-height: normal;
    background-color: #f8f8f8
    border-left: 0.2em solid $green
  }
  //代码过长可换行
  .markdown pre, .markdown code{
    word-wrap:break-word;
    white-space: pre-wrap;
  }
  .markdown hr {
    height: 0;
    clear: both;
    border: none;
    border-top: 1px solid $green;
    border-bottom: 2px solid $green;
  }
  .markdown a {
    text-decoration: none;
    color: $green
    border-bottom: 1px dashed $green;;
  }
  .markdown em {
    font-style: italic
    border-bottom: 1px solid;
  }
  .markdown strong {
    font-weight: bold;
  }
  .markdown strong::before,
  .markdown strong::after {
    content: "**";
    color: $green;
  }
  .markdown code {
    font-size: 0.8em;
    word-wrap: break-word;
  }
  .markdown code::before,
  .markdown code::after {
    content: "`";
    color: $green;
  }
  .markdown pre code {
    word-wrap: normal;
  }
  .markdown pre code::before,
  .markdown pre code::after {
    content: "";
    content: none;
  }
  .markdown img,
  .markdown video {
    display: block;
    height: auto;
    max-width: 100%;
    margin-right: auto;
    margin-left: auto;
  }
}
@media screen and (min-height: 35.625em), not screen {
  .markdown {
    line-height: 1.5em;
  }
}
@media screen and (min-width: 62em), not screen {
  .markdown > h1,
  .markdown > h2,
  .markdown > h3,
  .markdown > h4,
  .markdown > h5,
  .markdown > h6 {
    position: relative;
  }
  .markdown > h1::before,
  .markdown > h2::before,
  .markdown > h3::before,
  .markdown > h4::before,
  .markdown > h5::before,
  .markdown > h6::before {
    position: absolute;
    right: 100%;
  }
  .markdown ol > li:nth-child(n) {
    margin-left: 0;
  }
  .markdown > ul > li,
  .markdown > ol > li {
    left: 0;
    margin-right: 0;
  }
}